---
import Logo from "./Logo.astro";

const year = new Date().getFullYear();
---

<footer class="bg-dark/80 border-t border-white/10 py-12 mt-20">
  <div
    class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-8"
  >
    <div class="text-center md:text-left">
      <Logo size="md" showRecords={true} />
      <p class="text-gray-500 text-sm mt-2">Psychedelic Trance Label</p>
    </div>

    <div class="flex gap-6 text-gray-400">
      <a href="#" class="hover:text-neon-cyan transition-colors">Instagram</a>
      <a href="#" class="hover:text-neon-cyan transition-colors">SoundCloud</a>
      <a href="#" class="hover:text-neon-cyan transition-colors">Spotify</a>
    </div>

    <div class="text-gray-500 text-xs">
      &copy; {year} YTNK Records. All rights reserved.
    </div>
  </div>
</footer>
