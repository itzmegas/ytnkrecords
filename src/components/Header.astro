---
import Logo from "./Logo.astro";

const navItems = [
  { name: "Artists", href: "/artists" },
  { name: "Releases", href: "/releases" },
  { name: "Contact", href: "/contact" },
];
---

<header
  class="fixed top-0 w-full z-50 bg-background-dark/80 backdrop-blur-md border-b border-primary/20"
>
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 group cursor-pointer">
      <Logo size="sm" />
    </a>

    <nav class="hidden md:flex items-center gap-10">
      {
        navItems.map((item) => (
          <a
            class="text-sm font-medium tracking-widest uppercase hover:text-primary transition-colors"
            href={item.href}
          >
            {item.name}
          </a>
        ))
      }
    </nav>

    <div class="flex items-center gap-4">
      <button class="p-2 hover:text-primary transition-colors">
        <span class="material-symbols-outlined">shopping_cart</span>
      </button>
      <button
        class="bg-primary hover:bg-primary/80 text-white px-6 py-2 rounded-full text-xs font-bold uppercase tracking-widest transition-all glow-border"
      >
        Sign In
      </button>
    </div>
  </div>
</header>
