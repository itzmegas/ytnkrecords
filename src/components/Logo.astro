---
interface Props {
  class?: string;
  size?: "sm" | "md" | "lg" | "xl" | "2xl";
  showRecords?: boolean;
}

const { class: className, size = "md", showRecords = false } = Astro.props;

const sizeClasses = {
  sm: "text-xl",
  md: "text-3xl",
  lg: "text-5xl",
  xl: "text-7xl",
  "2xl": "text-9xl",
};
---

<div class:list={["inline-flex items-baseline font-black uppercase select-none", sizeClasses[size], className]} style="font-family: 'Anton', sans-serif; letter-spacing: -0.02em;">
  <span class="text-[#D6438D]">Y</span><span class="text-white">tnk</span>
  {showRecords && <span class="text-white ml-2 font-sans font-bold tracking-tight opacity-90" style="font-family: var(--font-display);">RECORDS</span>}
</div>

<style>
  /* Optional: Add a slight "print" feel if desired */
  div {
    line-height: 1;
    display: inline-flex;
    align-items: baseline;
  }
</style>
