---
import { getCollection } from "astro:content";
import ArtistCard from "../../components/ArtistCard.astro";
import Layout from "../../layouts/Layout.astro";

const artists = await getCollection("artists");
---

<Layout title="Artists | Ytnk Records">
  <div class="pt-32 pb-24 max-w-7xl mx-auto px-4">
    <div class="mb-12">
      <h1 class="text-5xl md:text-7xl font-display font-black tracking-tighter neon-glow-purple uppercase italic">
        OUR <span class="text-neon-cyan">ARTISTS</span>
      </h1>
      <p class="text-gray-400 mt-4 max-w-2xl text-lg uppercase tracking-widest">
        The masterminds behind the sonic journeys
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {artists.map((artist) => (
        <ArtistCard artist={artist} />
      ))}
    </div>
  </div>
</Layout>
