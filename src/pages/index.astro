---
import { getCollection } from "astro:content";
import ReleaseCard from "../components/ReleaseCard.astro";
import Layout from "../layouts/Layout.astro";

const latestReleases = await getCollection("releases");
// Sort by date descending
latestReleases.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Ytnk Records | Psychedelic Trance Label">
  <section
    class="relative h-[80vh] flex items-center justify-center overflow-hidden"
  >
    <!-- Animated Background Placeholder -->
    <div class="absolute inset-0 z-0 opacity-20">
      <div
        class="absolute inset-0 bg-linear-to-br from-neon-purple via-dark to-neon-cyan"
      >
      </div>
    </div>

    <div class="relative z-10 text-center px-4">
      <h1
        class="text-6xl md:text-8xl font-display font-black tracking-tighter mb-4 neon-glow-purple italic"
      >
        BEYOND<br /><span class="text-neon-cyan">VIBRATIONS</span>
      </h1>
      <p
        class="text-xl md:text-2xl font-sans text-gray-400 max-w-2xl mx-auto uppercase tracking-[0.2em]"
      >
        Deep Psychedelic Trance from the Void
      </p>

      <div class="mt-12 flex flex-wrap justify-center gap-6">
        <a
          href="/releases"
          class="px-8 py-3 bg-neon-purple font-bold uppercase tracking-widest hover:scale-105 transition-all duration-300"
        >
          Latest Releases
        </a>
        <a
          href="/artists"
          class="px-8 py-3 border border-neon-cyan text-neon-cyan font-bold uppercase tracking-widest hover:bg-neon-cyan hover:text-dark transition-all duration-300"
        >
          Our Artists
        </a>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 py-24">
    <div class="flex justify-between items-end mb-12">
      <div>
        <h2 class="text-4xl font-display font-bold">
          LATEST <span class="text-neon-purple">RELEASES</span>
        </h2>
        <p class="text-gray-500 mt-2">Discover our newest sonic frequencies</p>
      </div>
      <a
        href="/releases"
        class="text-neon-cyan text-sm uppercase tracking-widest hover:underline"
        >View all</a
      >
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        latestReleases
          .slice(0, 4)
          .map((release) => <ReleaseCard release={release} />)
      }
    </div>
  </section>
</Layout>
